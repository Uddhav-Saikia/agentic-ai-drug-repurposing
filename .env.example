# Application
APP_NAME=Agentic AI Drug Repurposing
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=drug_repurposing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/drug_repurposing

# Redis (Caching & Task Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# External APIs
CLINICAL_TRIALS_API_KEY=optional_api_key
USPTO_API_KEY=optional_api_key
PUBMED_API_KEY=optional_api_key

# Security
SECRET_KEY=your-secret-key-min-32-characters-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Agent Configuration
MAX_CONCURRENT_AGENTS=4
AGENT_TIMEOUT_SECONDS=300
ENABLE_AGENT_MEMORY=True

# Vector Database
VECTOR_DB_TYPE=pgvector
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
